{
  "lintOptions": {
    "typeCheck": true
  },
  "extends": "tslint:recommended",
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "max-classes-per-file": false,
    "ordered-imports": false,
    "completed-docs": false,
    "object-literal-sort-keys": false,
    "no-unused-expression": false,
    "arrow-parens": false,
    "radix": false,
    "interface-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never"
        }
      }
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "ban": [
      true,
      [
        "describe",
        "only"
      ],
      [
        "it",
        "only"
      ]
    ]
  }
}
